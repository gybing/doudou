<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="Child">

    <typeAlias alias="Child" type="doudou.vo.Child" />

	<insert id="create" parameterClass="Child">
        insert into Child 
        (
            firstName,
            lastName,
            gender,
            birthDate,
            photoURL
        )
        values 
        (
            #firstName#,
            #lastName#,
            #gender#,
            #birthDate#,
            #photoURL#
        )
        <selectKey keyProperty="id" resultClass="int">
            SELECT last_insert_id() AS ID FROM Child limit 1
        </selectKey>
    </insert>

    <select id="read" parameterClass="Integer" resultClass="Child">
        select * from Child
        where
        id = #id#
        limit 1
    </select>
    
   
    
    <update id="updateCover" parameterClass="Child">
    	update Child 
    	set 
    	cover = #cover#
    	where 
    	id = #id#
    </update>
    
</sqlMap>