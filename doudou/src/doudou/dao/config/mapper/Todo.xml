	<insert id="create" parameterClass="Todo" >
		insert into Todo
		(
			userId,
			todoType,
			contentId
		)
		values
		(
			#userId#,
			#todoType#,
			#contentId#
		)
		<selectKey keyProperty="id" resultClass="int">
            SELECT last_insert_id() AS ID FROM Todo limit 1
        </selectKey>
	</insert>    
	
	<select id="getTodoListByUserId" parameterClass="Map" resultClass="Todo">
		select * from Todo 
		where
		userID = #userId#
		order by id desc
		limit #offset#,#limit#
	</select>    
</sqlMap>